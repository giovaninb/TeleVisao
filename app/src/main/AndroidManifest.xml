<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ufcspa.giovanib.televisao">


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.USE_CREDENTIALS" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"


        >

        <!-- SplashScreen Activity -->
        <activity
            android:name=".controle.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Login Activity -->
        <activity android:name=".controle.LoginActivity" />

        <!-- DashboardActivity -->
        <activity
            android:name=".controle.DashboardActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <uses-feature
                android:name="android.hardware.camera"
                android:required="false" />

        </activity>

        <!-- SolicitaAtendimentoActivity -->
        <activity android:name=".controle.SolicitaAtendimentoActivity" />

        <!-- MyCameraActivity -->
        <activity android:name=".controle.MyCameraActivity">
            <uses-permission android:name="android.permission.RECORD_AUDIO" />
            <uses-permission android:name="android.permission.CAMERA" />
            <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
        </activity>
    </application>

</manifest>